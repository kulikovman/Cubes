<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cube_view_container"
        tools:context="ru.kulikovman.cubes.view.CubeView">

    <data>

        <variable
            name="model"
            type="ru.kulikovman.cubes.view.CubeView"/>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@{model.marginStart}"
        android:layout_marginTop="@{model.marginTop}"
        tools:layout_marginStart="50dp"
        tools:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/cube"
            android:layout_width="@dimen/red_cube_view_size"
            android:layout_height="@dimen/red_cube_view_size"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            tools:rotation="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/red_cube"/>

        <ImageView
            android:id="@+id/dots"
            android:layout_width="@dimen/red_cube_view_size"
            android:layout_height="@dimen/red_cube_view_size"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            tools:rotation="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/red_dot_6"/>

    </FrameLayout>

</layout>