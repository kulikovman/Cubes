<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cube_view_container"
        tools:context="ru.kulikovman.cubes.view.CubeView">

    <data>

        <variable
            name="model"
            type="ru.kulikovman.cubes.view.CubeView"/>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@{model.marginStart}"
        android:layout_marginTop="@{model.marginTop}">


        <ImageView
            android:id="@+id/shadow"
            android:layout_width="@dimen/white_shadow_size"
            android:layout_height="@dimen/white_shadow_size"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/white_shadow"/>

        <ImageView
            android:id="@+id/cube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            app:srcCompat="@drawable/white_cube"/>

        <ImageView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            app:srcCompat="@drawable/white_dot_1"/>

    </FrameLayout>

</layout>