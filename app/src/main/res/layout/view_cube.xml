<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cube_view_container"
        tools:context="ru.kulikovman.cubes.view.CubeView">

    <data>

        <variable
            name="model"
            type="ru.kulikovman.cubes.view.CubeView"/>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@{model.marginStart}"
        android:layout_marginTop="@{model.marginTop}"
        tools:layout_marginStart="50dp"
        tools:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/cube"
            android:layout_width="@dimen/cube_view_size"
            android:layout_height="@dimen/cube_view_size"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            tools:rotation="0"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/black_cube"/>

        <ImageView
            android:id="@+id/dots"
            android:layout_width="@dimen/cube_view_size"
            android:layout_height="@dimen/cube_view_size"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            tools:rotation="0"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/black_dot_5"/>

        <!--
        Это вью нужно для визуального определения размера кубика.
        Черный кубик самый крупный и это вью соответствует его размеру.
        Новые скины должны визуально вписываться в этот размер!
        -->
        <ImageView
            android:layout_width="@dimen/cube_size"
            android:layout_height="@dimen/cube_size"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </FrameLayout>

</layout>