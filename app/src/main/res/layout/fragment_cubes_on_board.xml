<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="ru.kulikovman.cubes.CubesOnBoardFragment">

    <data>

        <variable
            name="model"
            type="ru.kulikovman.cubes.CubesOnBoardFragment"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Доска для теней -->
        <FrameLayout
            android:id="@+id/bottom_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Доска для кубиков -->
        <FrameLayout
            android:id="@+id/top_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <!-- Верхние кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_setting_marginTop"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sum_info"
                    style="@style/SumTimeInfo"
                    android:onClick="@{() -> model.showSumInfo()}"
                    tools:text="12"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/button_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="@{() -> model.openSetting()}"
                android:src="@drawable/ic_settings_gray"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/time_info"
                    style="@style/SumTimeInfo"
                    android:onClick="@{() -> model.showTimeInfo()}"
                    tools:text="10:37"/>

            </FrameLayout>

        </LinearLayout>


        <!-- Кнопка перемотки -->
        <ImageView
            android:id="@+id/rewind_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_fast_rewind_gray_250dp"
            android:visibility="invisible"
            tools:visibility="visible"/>


        <!-- Кнопка сброса -->
        <ImageView
            android:id="@+id/button_of_throw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/transparent"
            android:onClick="@{() -> model.throwCubes()}"/>

    </FrameLayout>

</layout>