<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/shadow_view_container"
        tools:context="ru.kulikovman.cubes.view.ShadowView">

    <data>

        <variable
            name="model"
            type="ru.kulikovman.cubes.view.ShadowView"/>

    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@{model.marginStart}"
        android:layout_marginTop="@{model.marginTop}"
        tools:layout_marginStart="50dp"
        tools:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/shadow"
            android:layout_width="@dimen/white_shadow_view_size"
            android:layout_height="@dimen/white_shadow_view_size"
            android:layout_gravity="center"
            android:rotation="@{model.angle}"
            tools:rotation="45"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/white_shadow"/>

    </FrameLayout>

</layout>