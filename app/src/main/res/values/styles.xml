<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    // Заголовок опции в настройках
    <style name="TitleOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_8</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    // Разделитель в настройках
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/gray_2</item>
    </style>

    // Кнопка перехода на другой экран
    <style name="ButtonNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/button_next</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
